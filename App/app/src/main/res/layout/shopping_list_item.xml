<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shoppingListAdaptor_tv_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Name"


        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shoppingListAdaptor_tv_itemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Quantity"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/shoppingListAdaptor_tv_itemName"
        app:layout_constraintStart_toEndOf="@+id/shoppingListAdaptor_tv_itemName"
        app:layout_constraintTop_toTopOf="@+id/shoppingListAdaptor_tv_itemName"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/shoppingListAdaptor_tv_itemUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:text="Unit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/shoppingListAdaptor_tv_itemQuantity"
        app:layout_constraintStart_toEndOf="@+id/shoppingListAdaptor_tv_itemQuantity"
        app:layout_constraintTop_toTopOf="@+id/shoppingListAdaptor_tv_itemQuantity"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>